.contacts-wrapper

  // custom layer on the map
  .contacts__info-box
    span 8901 Marmora Road,
    span Glasgow, D04 89GR.

  // contacts container
  .contacts.container
    section
      h2.contacts__title.section-title Contact form

      // contact form
      .cf-wrapper
        form.cf

          fieldset.cf__fieldset
            input.cf__name(type='text' placeholder='Name' maxlength='32' required autofocus)
            input.cf__email(type='email' placeholder='Email' required)
            input.cf__tel(type='tel' placeholder='Phone')

          fieldset.cf__fieldset
            textarea.cf__message(rows='4' cols='50' placeholder='Message')

          button.cf__submit.submit-button(type='submit') Send message

